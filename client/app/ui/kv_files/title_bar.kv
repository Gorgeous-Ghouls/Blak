#:import Colors app.utils.Colors

<TitleBar>:
    size_hint: 1,None
    height: dp(30)
    pos_hint: {'top':1}
    md_bg_color: "#5b6771"
    MDLabel:
        size: self.texture_size
        center_y: root.center_y
        text: app.title
        x:root.x + 10
        halign: 'left'
        theme_text_color: "Custom"
        text_color: Colors.text_medium


    MDGridLayout:
        id: right_container
        rows: 1
        pos_hint: {'right': 1}
        center_y: root.center_y
        adaptive_width: True
        MDIconButton:
            draggable: False
            id: profile_button
            icon: "account-circle"
            icon_size: "15sp"

        MDLabel:
            id: connection_status_label
            adaptive_width: True
            text: app.connection_status
            color: [1,0,0,1]
        MDBoxLayout:
            draggable: False
            adaptive_width: True
            orientation: 'horizontal'
            md_bg_color: Colors.primary_bg
            MDIconButton:
                icon: "window-maximize"
                icon_size: root.button_size
                on_press: root.handle_buttons(self)
            MDIconButton:
                icon: "window-minimize"
                icon_size: root.button_size
                on_press: root.handle_buttons(self)
            MDIconButton:
                icon: "close"
                icon_size: root.button_size
                on_press: root.handle_buttons(self)
