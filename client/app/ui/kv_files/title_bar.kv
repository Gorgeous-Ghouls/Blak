#:import Colors app.utils.Colors
#:import get_color_from_hex kivy.utils.get_color_from_hex
<TitleBar>:
    size_hint: 1,None
    height: dp(30)
    pos_hint: {'top':1}

    MDLabel:
        size: self.texture_size
        center_y: root.center_y
        text: app.title
        x:root.x + 10
        halign: 'left'
        theme_text_color: "Custom"
        text_color: get_color_from_hex(Colors.text_medium.value)


    MDGridLayout:
        rows: 1
        pos_hint: {'right': 1}
        center_y: root.center_y
        adaptive_width: True
        spacing: "5dp"
        MDLabel:
            id: connection_status_label
            adaptive_width: True
            text: app.connection_status
            color: [1,0,0,1]
            halign: 'right'
        MDBoxLayout:
            draggable: False
            adaptive_width: True
            orientation: 'horizontal'
            md_bg_color: root.button_bg
            MDIconButton:
                icon: "window-maximize"
                icon_size: root.button_size
                on_press: root.handle_buttons(self)
            MDIconButton:
                icon: "window-minimize"
                icon_size: root.button_size
                on_press: root.handle_buttons(self)
            MDIconButton:
                icon: "close"
                icon_size: root.button_size
                on_press: root.handle_buttons(self)
