#:import Colors app.utils.Colors

<ChatItemLabel@MDLabel>:
    color: Colors.get_kivy_color("text_medium")


<ChatItem>:
    orientation: "vertical"
#    focus_behavior: True
    ripple_behavior: True
    size_hint: 1,None
    height: main_box.height
    md_bg_color: Colors.get_kivy_color("accent_bg")
    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True

        MDBoxLayout:
            id: main_box
            orientation: "vertical"
            adaptive_height: True
            ChatItemLabel:
                size: self.texture_size
                text: root.username
                halign: 'center'
            MDBoxLayout:
                #:set font_size "12sp"
                padding: "10dp", 0, "10dp", 0
                ChatItemLabel:
                    color: Colors.get_kivy_color("accent_bg_text")
                    text: root.last_seen
                    font_size: font_size
                    halign: 'left'
                    valign: 'bottom'
                ChatItemLabel:
                    color: Colors.get_kivy_color("accent_bg_text")
                    text: root.msg_count
                    font_size: font_size
                    halign: 'right'
                    valign: 'bottom'
        MDSeparator:
            color: Colors.get_kivy_color("primary_bg")
